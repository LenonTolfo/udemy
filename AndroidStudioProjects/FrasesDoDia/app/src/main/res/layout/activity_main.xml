<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_dark"
    tools:context="frasesdodia.cursoandroid.com.frasesdodia.MainActivity">

    <Button
        android:id="@+id/botaoNovaFraseId"
        android:layout_width="312dp"
        android:layout_height="49dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/texto_frase_dia"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-50dp"
        tools:layout_editor_absoluteY="8dp" />

    <TextView
        android:id="@+id/textoNovaFraseId"
        android:layout_width="307dp"
        android:layout_height="310dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="@android:color/white"
        android:textSize="@dimen/texto_nova_frase"
        app:layout_constraintLeft_toLeftOf="@+id/botaoNovaFraseId"
        app:layout_constraintRight_toRightOf="@+id/botaoNovaFraseId"
        app:layout_constraintTop_toBottomOf="@+id/botaoNovaFraseId" />
</android.support.constraint.ConstraintLayout>
